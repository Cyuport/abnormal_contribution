<% provide(:title, "Edit user") %>

<h1>修改个人资料</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for (@user) do |f| %>
     <%= render 'shared/error_messages', object: @user %>
     <%= f.label :name, "姓名/name" %>
     <%= f.text_field :name, class: 'form-control' %>

     <%= f.label :email, "邮件地址/email" %>
     <%= f.email_field :email, class: 'form-control' %>

     <%= f.label :password, "密码/password" %>
     <%= f.password_field :password, class: 'form-control' %>

     <%= f.label :password_confirmation, "确认密码/Confirmation" %>
     <%= f.password_field :password_confirmation, class: 'form-control' %>


     <%= f.submit "保存修改", class: "btn btn-primary" %>
   <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank" rel="noopener">修改头像</a>
    </div>
  </div>
</div>